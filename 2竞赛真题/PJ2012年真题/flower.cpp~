int main(){
	freopen("flower.in","r",stdin);
	freopen("flower.out","w",stdout);
	cin>>n>>m;
	for(int i=1;i<=n;i++) cin>>a[i];
    f[0]=1;  
    for(int i=1; i<=n;i++) 
        for(int j=m;j>=1;j--)  
            for(int k=1;k<=a[i]&&j-k>=0;k++) 
                f[j]=(f[j-k]+f[j]) % 1000007; 
    cout<<f[m];//Êä³ö
    return 0;
}
 

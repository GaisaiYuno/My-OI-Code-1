var
        x,s,n,d,k,i,j,t,l,max,max2:longint;
        a:array[0..2000]of longint;
begin
        assign(input,'jump.in');reset(input);
        assign(output,'jump.out');rewrite(output);
        readln(n,d,k);
        max:=-maxlongint;
        max2:=max;
        for i:=1 to n do
        begin
                readln(x,s);
                if s>0 then a[x mod d]:=a[x mod d]+s;
                if x=t+1 then
                begin
                        inc(l);
                        if s>max then max:=s
                        else if s>max2 then max2:=s;
                end;
                t:=x;
        end;
        for i:=1 to 2000 do
        begin
                if j+a[i]>=k then
                begin
                        if l div i=1 then
                        begin
                                a[i]:=a[i]-max;
                                if l div i=2 then
                                begin
                                a[i]:=a[i]-max2;
                                        j:=j+a[i];
                                a[i]:=a[i]+max2;
                                end
                                else j:=j+a[i];
                                a[i]:=a[i]+max;
                        end;
                end
                else j:=j+a[i];
                if j>=k then
                begin
                        writeln(i);
                        close(input);
                        close(output);
                        exit;
                end;
        end;
        writeln(-1);
        close(input);
        close(output);
end.
var
 x,a,f:array[0..500000] of longint;
 n,d,k,m,i,j,s,t:longint;
function max(x,y:longint):longint;
begin
        if x>y then exit(x)
        else exit(y);
end;
begin
        readln(n,d,k);
        s:=0;
        for i:=1 to n do
         begin
                readln(x[i],a[i]);
                if a[i]>0 then s:=s+a[i];
                t:=max(t,x[i]-x[i-1]);
         end;
        if s<k then
         begin
                writeln(-1);
                halt;
         end;
        if t-d<0 then t:=0;
        for s:=t-d to x[n] do
         begin
                for i:=1 to n do
                 begin
                        f[i]:=-maxlongint;
                        for j:=n-1 downto 1 do
                         begin
                                if (x[i]-x[j]<=d+s) and (x[i]-x[j]>=d-s) then
                                 begin
                                        f[i]:=max(f[i],f[j]+x[i]);
                                 end
                                else break;
                         end;
                        if f[i]>=k then
                         begin
                                writeln(s);
                                halt;
                         end;
                 end;
         end;
end.